<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.uwc"
       name="Ultimate Whitecream"
       version="1.1.20"
       provider-name="mortael">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <license>GPL 2.0</license>
        <summary lang="en">godzilla</summary>
        <description lang="en">Watch godzilla</description>
		<disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon. The author does not have any affiliation with the content provider.</disclaimer>
    </extension>
</addon>

<addon id="repository.godzilla" name="godzilla repo" version="0.0.1" provider-name="godzilla">
	<extension point="xbmc.addon.repository" name="godzilla repo">
		<info compressed="false">http://raw.github.com/whitecream01/WhiteCream-V0.0.1/master/addons.xml</info>
		<checksum>http://raw.github.com/whitecream01/WhiteCream-V0.0.1/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/whitecream01/WhiteCream-V0.0.1/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>The Official godzilla repository</summary>
		<description>bite</description>
		<disclaimer>it will bite</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
